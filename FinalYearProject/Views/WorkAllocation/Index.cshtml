@model FinalYearProject.ViewModels.WorkAllocationIndex

@{
    ViewBag.Title = "Work Allocation";
}

<h2>Work Allocation</h2>

<table class="table">
    <tr>
        <th>
            Staff Member
        </th>
        <th></th>
    </tr>


@foreach (var item in Model.StaffMembers) {

    string selectedRow = "";
    if (item.StaffID == ViewBag.StaffID)
    {
        selectedRow = "success";
    }

    <tr class="@selectedRow">
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.ActionLink("Select", "Index", new { id=item.StaffID })
        </td>
    </tr>
}

</table>

@if (Model.RMAs != null)
{
    <h3>Current Jobs</h3>
    <table class="table">
        <tr>
            <th>RMA</th>
            <th>Status</th>
        </tr>

        @foreach (var item in Model.RMAs)
        {
            string selectedRow = "";
            if (item.RMAid == ViewBag.RMAid)
            {
                selectedRow = "success";
            }
            <tr class="@selectedRow">
                <td>
                    @item.RMAid
                </td>
                <td>
                    @item.Status.Description
                </td>
            </tr>
        }
    </table>
}
